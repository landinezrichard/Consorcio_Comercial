/*EXPERIENCIA*/
.Experiencia
	display inline-block
	width 100%
	background $light_gray2
	&-title
		margin-top 94px !important
	&-item
		display inline-block
		width 100%
		position relative
	/*Imagen*/
	&-itemImageContainer
		display inline-block
		margin 0
		padding .5em
		background $white
		// width 627px
		width 572px
		box-sizing border-box
		box-shadow 0px 6px 6px rgba(162,162,162,0.4)
		float left
	&-itemImage
		max-width 546px
	/*Texto*/
	&-info
		display inline-block
		max-width 627px
		background $white
		padding 60px 40px 20px
		text-align left
		box-sizing border-box
		box-shadow $light_gray 0 5px 35px
		position relative
		top 17px
		right 50px
	&-itemTitle
		margin 0
		font-weight 700
		font-size 1.56em
		color $black
	&-infoDesc
		margin 0
		font-weight 400
		font-size 1em
		color $dark_gray		
	&-infoCaract
		margin 1em 0
		font-weight 400
		font-size 1em
		color $dark_gray
	&-ubiTitle
		margin 0
		font-weight 700
		font-size 1.12em
		color $dark_gray
	&-ubi
		margin 0
		font-weight 400
		font-size 1.06em
		color $dark_gray
	&-itemButton
		display inline-block
		cursor pointer
		text-transform uppercase
		background-color $blue
		color $white
		font-weight 400
		font-size .9em
		width 123px
		height 36px
		line-height 36px
		margin 1em 0
		text-align center
	&-clip
		display inline-block
		width 50px
		height 115px
		position absolute
		top -56px
		left 5px
		z-index 2