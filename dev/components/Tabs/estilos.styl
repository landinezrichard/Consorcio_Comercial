/*TABS*/
.Tabs
	padding 0
	margin 0
	font-size 0
	text-align center
	width 100%
	margin 0 auto
	
	/*Pesta単as*/
	&-item
		color $black
		display inline-block
		width 33.3%
	&-itemLink
		cursor pointer
		text-decoration none
		display inline-block
		background-color $white
		color $black
		text-transform uppercase
		width 100%
		font-weight 700
		font-size 1rem
		border 1px solid $light_gray4
		height 64px		
		vertical-align top
	/*Contenido*/
	&-content
		margin 0 auto
		// width 600px
		border-top none
		padding 15px 20px
		border-bottom 1px solid $light_gray4
		
	&-contentPane
		line-height 25px
		// text-align left
		text-align center
		display none
		color #616161
		
	/*Contenido activo*/
	&--is-active
		display block
		
	/*Pesta単a activa*/
		
	&--is-selected
		color $white
		background $light_gray4
/*Phone Landscape*/
@media screen and (min-width:600px)
	.Tabs
		/*Pesta単as*/
		&-itemLink
			line-height 64px
/*Tablet portrait*/
@media screen and (min-width:720px)
	.Tabs
		/*Pesta単as*/
		
		/*Contenido*/
		&-content
			padding 40px 20px