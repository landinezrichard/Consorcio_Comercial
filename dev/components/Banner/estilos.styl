/*BANNER*/

.Banner
	width 100%
	// height 714px
	position relative
	&-slides
		position relative
		width 100%
		float left
		display inline-block
		// height 714px
			
	&-item
		display inline-block
		float left
		width 100%
		position relative
	&-image
		width 100%
		// height 714px
	/*Cuadro de informacion sobre el banner*/
	&-info
		position absolute
		right 360px
		bottom 0
		text-align center
	&-infoImageContainer
		width 174px
		display inline-block
		margin 0
		margin-bottom 1em
		padding 0
	&-infoImage
		display inline-block
		
	&-text
		text-align left
		background-color $transparent_white
		padding 2em
		max-width 605px
		box-sizing border-box
		
	&-textTitle
		color $dark_black
		font-weight 700
		font-size 2.34em
		margin 0
		margin-left 1em
		// margin 1em 0 .5em
	&-textDesc
		color $dark_black
		font-weight 400
		font-size 1.67em
		margin-top 0
		margin-left 1em
		
	&-fondo
		background-image url('../images/index/fondo-transparente.png')
		width 100%
		min-height 150px
		display inline-block
	&-fondoText
		max-width 795px
		display inline-block
			
/*Controles OWl*/

.Banner-slides.owl-carousel .owl-controls .owl-nav
	margin-top 0

.Banner-slides.owl-carousel .owl-controls .owl-dots
	position absolute
	bottom 35px
	left 20%
	
.Banner-slides.owl-carousel .owl-controls .owl-dots .owl-dot span
	width 20px
	height 20px
	background-color $white
	
.Banner-slides.owl-carousel .owl-controls .owl-dots .owl-dot.active span
	background-color $gray

.Banner-slides.owl-carousel .owl-controls .owl-nav .owl-prev	
.Banner-slides.owl-carousel .owl-controls .owl-nav .owl-next
	position absolute	
	top 45%
	font-size 4em
	background-color transparent

.Banner-slides.owl-carousel .owl-controls .owl-nav .owl-prev	
	left 0	
	
.Banner-slides.owl-carousel .owl-controls .owl-nav .owl-next	
	right 0