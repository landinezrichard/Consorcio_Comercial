/*FOOTER*/

.Footer
	&-white
		display inline-block
		// margin 1em
		width 100%

	&-text
		display inline-block
		font-weight 700
		font-size 1em
		color $gray2
		width 115px
		
		
	&-description
		display inline-block
		max-width 490px		
		font-weight 400
		font-size 1em
		color $dark_gray
		text-align left
		
	&-text
	&-description
	&-logoAmbienti
	&-logoOikos
		display inline-block
		vertical-align middle
		margin 1em 2em
		
	&-logoAmbienti
		height 47px
		
	&-logoOikos
		height 55px
		
	/*Formulario RSS*/
	&-gray
		background $light_gray2
		
	&-form
		width 90%
		display inline-block
		margin 2.5%
		
	&-label
		font-weight 300
		font-size 1.12em
		margin .5em 1.3em
		display inline-block
		max-width 527px

	&-rss
		display inline-block
		max-width 500px
		width 500px
	
	&-input	
		background url(../images/contacto/rss-icon.png) no-repeat 0.5% center $white
		height 40px
		padding 2px 2.5% 2px 13%
		box-sizing border-box
		border 1px solid $light_gray3
		width 90%
		
	&-button
		display inline-block
		width 45px
		height 41px
		line-height 41px
		background $gray
		color $white
		font-size 2.2em
		vertical-align middle
	&-buttonIcon
		display inline-block
		
