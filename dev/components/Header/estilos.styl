/*HEADER*/

.Header	
	background-color $white
	
	&-logos
		display inline-block
		float left
	&-logoOikos
		display inline-block
		margin 0 .5em
	&-logoConsorcio
		display inline-block
		margin 0 1.5em
	&-logoAmbienti
		display inline-block
		margin 0 .5em
	
	/*Info de contacto*/

	&-contacto
		display inline-block
		color $gray
		float right
		margin 1em 0
		
	&-contactoMail
	&-contactoTel
		display inline-block
		
	&-contactoMailtext
		font-weight 700
		font-size 1.12em
		
	&-contactoMailIcon
		font-size 1.5em
		margin 0 .5em
		
	&-contactoMailIcon
	&-contactoMailtext
		vertical-align middle
		
	&-contactoTel
		font-weight 700
		margin 0 1em
		
	&-contactoTelIcon
		font-size 1.5em
		
	&-contactoTelText
		font-size 1em
		
	&-contactoTelIcon
	&-contactoTelText
		vertical-align middle
		
	&-contactoRedes
		text-align right
		margin .5em 0
		
	&-contactoRedesText
		font-weight 700
		font-size 0.87em
		
	&-contactoRedesIcon
		display inline-block
		margin 0 .5em
		font-size 1.43em
		vertical-align middle

/*tablet*/
@media screen and (min-width:800px)
	.Header
		margin-top 50px