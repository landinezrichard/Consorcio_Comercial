



.cont_top_quienes {
    width: 100%;
    height: auto;
    float: left;
    padding-bottom: 50px ;
}

.cont_txt_quienes {
    max-width: 95%;
    float: right;
    margin: 20px 2.5% 0 2.5%;
    text-align: left;    
}

.titulo_quienes {
    width: 100%;
    float: left;
    font-size: 35px;
    font-weight: 700;
    text-transform: uppercase;
}

.txt_quienes {
    width: 100%;
    float: left;
    text-align: left;
    color: #666;
}

.cont_2_quienes {
    width: 100%;
    float: left;
    padding: 0 0 80px 0;
}

.columns_quienes {
    width: 95%;
    margin: 10px 2.5% 0 2.5%;
    max-width: 300px;
    display: inline-block;
}

.col1 {
    text-align: center;
}
.col2 {
    text-align: center;
}

.logo_quienes {
    width: 176px;
    height: 176px;
    background: #fff;
    position: relative;
    display: inline-block;
    margin: 0;
}
.logo_quienes:after{
    width: 100%;
    height: 20px;
    background: url(../images/diseno/05-noticias/sombra.png) ;
    background-size: 100% 100%;
    position: absolute;
    bottom: -20px;
    left: 0;
    content: "";
}

.titulo_logo_quienes {
    width: 100%;
    float: left;
    text-transform: uppercase;
    font-size: 30px;
    margin: 30px 0 0 0;    
}

.ambienti {
    color: #84B11F;
}
.oikos{
    color:#22376C;
}

.txt_logo_quienes {
    width: 100%;
    float: left;
    font-size: 18px;
    color: #575756;
    margin: 10px 0 0 0;
}

.logo_quienes {
    width: 176px;
    height: 176px;
}
.logo_quienes.consosrcio{
    background: #C6C5C5;
    margin: 130px 0 0 0;
    display: none;
}

@media screen and (min-width:600px){

    .cont_top_quienes {
        height: auto;
        padding-bottom: 0;
        background: url(../images/diseno/04-quienes/fondo.jpg) no-repeat center;
        padding-bottom: 10%;
    }
    .cont_txt_quienes {
        width: 50%;
        max-width: 368px;
        margin: 20% 5% 0 0;   
    }
}
@media screen and (min-width:960px){

    .cont_top_quienes {
        height: 700px;
        padding-bottom: 0;
        background: url(../images/diseno/04-quienes/fondo.jpg) no-repeat center top;
    }
    .cont_txt_quienes {
        max-width: 368px;
        margin: 20% 10% 0 0;   
    }
    .columns_quienes {
        width: 95%;
        margin: -30px 2.5% 0 2.5%;
        max-width: 380px;
    }

    .col1 {
        float: left;
        text-align: right;
    }
    .col2 {
        float: right;
        text-align: left;
    }
    .titulo_logo_quienes {
        font-size: 35px;  
    }
    .logo_quienes.consosrcio{
        display: inline-block;
    }

}
