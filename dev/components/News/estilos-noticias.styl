




.cont_gen_noticias_destac {
    width: 100%;
    display: inline-block;
    margin: 10px 0 50px 0;
}

.cont_gen_noticia_dest {
    width: 95%;
    margin: 0 2.5%;
    display: inline-block;
    max-width: 380px;
}
.cont_gen_noticia_dest:hover{
    opacity: .9;
}

.img_not_dest {
    width: 100%;
    float: left;
    max-height:375px;
    height:auto;
    overflow: hidden;
}

.cont_txts_not_dest {
    width: 95%;
    float: left;
    margin: 0px 2.5% 0 2.5%;
    background: #fff;
    position: relative;
    padding: 10px 15px;
    box-sizing: border-box;
    text-align: left;
}

.cont_txts_not_dest:after{
    width: 100%;
    height: 33px;
    content: "";
    margin: 0 0 -33px 0;
    background: url(../images/diseno/05-noticias/sombra.png);
    background-size: 100% 100%;
    float: left;
}

.tit_notc_dest {
    width: 100%;
    float: left;
    font-size: 25px;
    font-weight: 700;
    color: #1d1d1b;
}

.txT_noticia_dest {
    width: 100%;
    float: left;
    font-size: 16px;
    color: #1d1d1b;
    border-top:2px solid #999;
    margin: 10px 0 0 0 ;
    padding: 20px 0 ;
}
.txT_noticia_dest a{
    color: #666;
    
}

.btn_mas_noticia {
    float: right;
    margin: 0px 0 20px 0;
    background: #84B11F;
    text-transform: uppercase;
    color: #fff;
    padding: 10px 30px ;
}

@media screen and (min-width:960px){

    .cont_gen_noticia_dest {
        width: 47%;
        margin: 0 1%;
        max-width: none;
    }
    .cont_txts_not_dest {
        margin: -50px 2.5% 0 2.5%;
        
    }
    .img_not_dest {
        height:35vw;
        
    }
    
}
