
.cont_gen_notic {
    width: 95%;
    margin: 40px .5%;
    display: inline-block;
    max-width: 750px;
}

.img_plantilla1 {
    max-width: 563px;
    width:100%;
    display: inline-block;
    vertical-align: middle;
}

.titulo_plantilla1 {
    width: 100%;
    display: inline-block;
    vertical-align: middle;
    margin: 10px 0;
    background: #fff;
    box-sizing: border-box;
    font-size: 25px;
    font-weight: 700;
    text-align: left;
    position: relative;
}
.titulo_plantilla1:after{
    width: 100%;
    height: 30px;
    position: absolute;
    bottom: -30px;
    left: 0;
    background: url(../images/diseno/05-noticias/sombra.png) ;
    background-size: 100% 100%;
}

.column_plantilla {
    width: 100%;
    display: inline-block;
    vertical-align: top;
    margin: 10px 0;
    font-size: 18px;
    font-style: italic;
    color: #575756;
    text-align: justify;
}
.column_plantilla span{
    font-size: 20px;
    font-style: normal;
    text-transform: uppercase;
    text-align: left;
    
}

.cont_gen_compartir_plantilla {
    width: 100%;
    float: left;
    margin: 30px 0; 
}

.txt_compartir {
    width: 100%;
    float: left;
    font-size: 18px;
    color: #575756;
    margin: 0 0 10px 0;
}

.btn_compartir {
    font-size: 35px;
    color: #fff;
    width: 43px;
    height: 43px;
    line-height: 43px;
    font-family:'icomoon';
    text-align: center;
    box-sizing: border-box;
    background: #22376C;
    display: inline-block;
    margin: 0 3px;
}
.img_plantilla2 {
    width: 100%;
    display: inline-block;
}

#titulo_plantilla2 {
    width: 95%;
    max-width: 635px;
    display: inline-block;
    margin: -50px 0 0 0 ;
    box-sizing: border-box;
    background: rgba(255,255,255,.96);
    padding: 20px 30px;
    font-size: 25px;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
}
#titulo_plantilla2:after{
    width: 100%;
    content: "";
    height: 30px;
    position: absolute;
    bottom: -30px;
    left: 0;
    background: url(../images/diseno/05-noticias/sombra.png) ;
    background-size: 100% 100%;
}

.txt_1_plantilla2 {
    width: 100%;
    display: inline-block;
    margin: 30px 0 10px 0;
    font-size: 18px;
    font-style: italic;
    color: #575756;
    text-align: justify;
}
.txt_1_plantilla2 span{
    font-size: 25px;
    font-style: normal;
    text-transform: uppercase;
    text-align: left;
}


@media screen and (min-width:960px){
    
    .cont_gen_notic {
        width: 100%;
        margin:40px 0;
        max-width: none;
    }
    .img_plantilla1 {
        width:65%;
    }
    .titulo_plantilla1 {
        width: 42%;
        margin: 0 0 0 -30px;
        padding: 60px 40px;
        font-size: 35px;
    }
    .titulo_plantilla1:after{
        content: "";
    }
    .column_plantilla {
        width: 41%;
        margin: 30px 2%;
    }
    .column_plantilla span, .txt_1_plantilla2 span{
        font-size: 25px;
    }
    .txt_1_plantilla2{
         width: 86%;
    }
    #titulo_plantilla2 {
        font-size: 30px;
    }
}


